<!-- Hero Section -->
<section
	id="cc-hero-section"
	class="hero min-h-[50dvh]"
	style="background-image: url({{settings.homepage_background_image}});"
>
	<div class="hero-overlay"></div>
	<div class="hero-content w-full max-w-3xl text-neutral-content text-center">
		<div class="w-full">
			<h1 class="mb-5 text-white font-bold">
				How can we help you today?
			</h1>
			{{search
				instant=true
				class="input max-md:w-full md:w-2/3 lg:w-full focus-within:outline-sky-500 rounded-lg text-black h-12 py-1"
			}}
		</div>
	</div>
</section>

<section class="max-w-5xl max-md:w-full md:w-2/3 lg:w-full mx-auto px-4 py-12">
  <div class="article-container" id="article-container">
    <aside id="similar-articles-section" class="w-full md:w-1/3 h-max">
			<h3 class="text-md font-semibold">Articles in this section</h3>
			<div class="w-full join join-vertical mt-2 gap-2">
        {{#each section.articles}}
          <a
            href="{{url}}"
            class="btn btn-md h-[50px] flex items-center justify-start {{#is id ../article.id}}bg-brand text-white{{else}}border-brand text-brand{{/is}} hover:bg-brand transition-colors rounded-lg hover:text-white text-start text-sm line-clamp-2 leading-4"
          >
            {{title}}
          </a>
        {{/each}}
			</div>
		</aside>
  
    <article id="main-content" class="article">
      <header class="article-header">
        <h1 title="{{article.title}}" class="!text-3xl font-bold text-main-text">
          {{article.title}}
          {{#if article.internal}}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
              <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
              <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
            </svg>
          {{/if}}
        </h1>
      </header>
  
      <section class="article-info">
        <div class="article-content">
          <div class="article-body">{{article.body}}</div>
  
          {{#if (compare article.content_tags.length ">" 0)}}
            <section class="content-tags">
              <p>{{t 'content_tags_label'}}</p>
              <ul class="content-tag-list">
                {{#each article.content_tags}}
                  <li class="content-tag-item" data-content-tag-id="{{id}}">
                    {{#link "search_result" content_tag_id=id}}
                      {{name}}
                    {{/link}}
                  </li>
                {{/each}}
              </ul>
            </section>
          {{/if}}
  
          {{#if attachments}}
            <div class="article-attachments">
              <ul class="attachments">
                {{#each attachments}}
                  <li class="attachment-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="attachment-icon">
                      <path fill="none" stroke="currentColor" stroke-linecap="round" d="M9.5 4v7.7c0 .8-.7 1.5-1.5 1.5s-1.5-.7-1.5-1.5V3C6.5 1.6 7.6.5 9 .5s2.5 1.1 2.5 2.5v9c0 1.9-1.6 3.5-3.5 3.5S4.5 13.9 4.5 12V4"/>
                    </svg>
                    <a href="{{url}}" target="_blank">{{name}}</a>
                    <div class="attachment-meta meta-group">
                      <span class="attachment-meta-item meta-data">{{size}}</span>
                      <a href="{{url}}" target="_blank" class="attachment-meta-item meta-data">{{t 'download'}}</a>
                    </div>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
        </div>
      </section>
    </article>
  </div>
</se>
